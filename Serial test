import serial
import time



if __name__ == '__main__':
    ser = serial.Serial('/dev/ttyACM0', 9600, timeout=1)
    ser.reset_input_buffer()

    while True:
        integer = '1'
        ser.write(bytes(integer, 'ascii'))
        time.sleep(0.05)
        # arduino_input = ser.readline().decode('ascii').rstrip()
        # print(arduino_input)
