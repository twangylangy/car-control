import serial
import time

if __name__ == '__main__':
    ser = serial.Serial('/dev/ttyACM0', 9600, timeout=1)
    ser.reset_input_buffer()

    while True:
        ser.write("Hello from Raspberry Pi!\n".encode('ascii'))
        arduino_input = ser.readline().decode('ascii').rstrip()
        print(arduino_input)
        time.sleep(1)
