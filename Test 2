import serial
import time


if __name__ == '__main__':
    while True:
        try:
            ser = serial.Serial('/dev/ttyACM0', 9600, timeout=1)
            ser.flush()

            # read the serial port
            line = ser.readline().decode('utf=8').rstrip()
            print(line)

            ser.write(bytes("", 'ascii'))
            time.sleep(0.05)
        except:
            print("An exception occurred")

